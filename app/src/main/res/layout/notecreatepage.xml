<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="com.example.kaew_pc.diary_project.Activity.Note.NoteCreatePageActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout" />


    <!--<ProgressBar-->
    <!--style="?android:attr/progressBarStyleSmall"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/appBarLayout"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginRight="24dp"-->
    <!--android:layout_marginEnd="24dp"-->
    <!--android:layout_marginTop="177dp"-->
    <!--android:id="@+id/progressBar" />-->

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE4E1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout">


        <ImageButton
            android:id="@+id/picButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/picture"
            android:layout_below="@+id/saveButton"
            android:layout_alignStart="@+id/showdate" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@color/wallet_holo_blue_light"
            android:text="ตั้งวันที่แจ้งเตือน"
            android:textColor="@android:color/white"
            android:layout_above="@+id/dateAlert"
            android:layout_alignStart="@+id/cancelButton" />

        <TextView
            android:id="@+id/dateAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/dateButton"
            android:layout_marginBottom="16dp"
            android:text="วันที่แจ้งเตือน"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignEnd="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignRight="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/textView"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint=" แตะเพื่อแก้ไข"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/title"
            android:background="@android:color/transparent"
            android:text="รายละเอียด"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/title"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:text="ชื่อเรื่อง"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignEnd="@+id/desc"
            android:layout_alignRight="@+id/desc"
            android:background="@android:color/transparent"
            android:text="dateCreate"
            tools:textColor="@android:color/black" />

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint=" แตะเพื่อแก้ไข"
            android:inputType="textMultiLine"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:textColor="#000000"
            android:textSize="18dp" />

        <!--<ImageView-->
        <!--android:id="@+id/picShow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignBottom="@+id/listButton"-->
        <!--android:layout_alignEnd="@+id/desc" />-->

        <ImageView
            android:id="@+id/picShow"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/cancelButton"
            android:layout_alignEnd="@+id/desc"
            android:layout_alignStart="@+id/desc"
            android:layout_below="@+id/desc" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="#D3D3D3"
            android:singleLine="true"
            android:text="ยกเลิก"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_above="@+id/dateButton"
            android:layout_alignStart="@+id/picShow" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="#FF9999"
            android:singleLine="false"
            android:text="บันทึก"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_alignEnd="@+id/picShow"
            android:layout_toEndOf="@+id/dateButton"
            android:layout_above="@+id/dateButton" />

    </RelativeLayout>


</RelativeLayout>
