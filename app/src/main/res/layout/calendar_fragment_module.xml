<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_calendar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.kaew_pc.diary_project.Activity.Calendar.Fragment.CalendarModuleFragment">

    <LinearLayout
        android:id="@+id/linearLayout_month_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB7C5"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="6dp">

        <ImageView

            android:id="@+id/img_arrow_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/m_arrow_l" />

        <TextView
            android:id="@+id/tv_title_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MONTH"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/m_arrow_r" />
    </LinearLayout>

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout_day_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Sun"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Mo"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tu"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Wed"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Thu"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Fri"
            android:textColor="#364646" />

        <TextView
            android:id="@+id/tv_day_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Sat"
            android:textColor="#364646" />


    </LinearLayout>

    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7" />

</LinearLayout>
