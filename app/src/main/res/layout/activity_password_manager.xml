<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaew_pc.diary_project.Activity.SplashScreenActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pid"
        android:layout_below="@+id/pid"
        android:layout_marginTop="18dp"
        android:text="รหัสผ่าน"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:text="ตั้งค่ารหัสผ่าน"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="160sp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/pid"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="ใส่รหัสผ่าน (4 หลัก)"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:paddingLeft="5dp"
        android:textColorLink="#ff8800"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="160sp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/password"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="ใส่รหัสผ่าน (4 หลัก)"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:paddingLeft="5dp"
        android:textColorLink="#ff8800"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/password2"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_red_light"
        android:text="ตกลง"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pid"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageView3"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="ใส่รหัสบัตรประชาชน"
        android:inputType="number"
        android:maxLength="13"
        android:paddingLeft="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="รหัสบัตรประชาชน"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/pid" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="19dp"
        android:text="ยืนยันรหัสผ่าน"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView8"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/id" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/lock" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/password2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        app:srcCompat="@drawable/lock" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/splash_screen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
